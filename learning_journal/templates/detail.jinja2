{% extends "layout.jinja2" %}
    {% block body %}
        <main>
            <article class="post">
                <h3>{{ entry.title }}</h3>
                    <p>{{ entry.body }}</p>
                <br>
                <br>
                <br>
                <a class="twitter-share-button"
                href="https://twitter.com/intent/tweet"
                data-size="large"
                data-text="{{ entry.title }}: {{ entry.body | truncate(20) }}""
                data-hashtags="RachaelBlog"
                data_url={{ request.route_url('detail', id=entry.id) }}>
                Tweet
                </a>
                <br>
                <br>
                <br>
            </article>
            <section>
            {% if request.authenticated_userid %}
                <a class="edit" href={{ request.route_url('edit', id=entry.id) }}>Edit Post</a>
                <a href=# class="edit delete" data={{ entry.id }}>Delete Post</a>
            {% endif %}
            </section>
        </main>
    {% endblock %}
    {% block javascript %}
    <script type="text/javascript" src="{{ request.static_path('learning_journal:static/app.js') }}">
    </script>
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    {% endblock %}